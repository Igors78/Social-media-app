<section class="user-section">
    <h2><%= "Name: #{@user.name}" %></h2>
    <% if current_user == @user && @user.friend_requests_received.any?%>
    <% @user.friend_requests_received.each do |request| %>
    <p>Friendship requested by:<%=  "#{request.user.name}"%></p>
    <%= link_to "Accept request",
                                { controller: "friendships",
                                  action: "accept_request",
                                  user_id: request.user.id,
                                  friend_id: request.friend.id },
        class: 'badge badge-primary' %>
    <% end %>
    <% end %>
    <article class="timeline">
        <h3>Recent posts:</h3>
        <ul class="posts">
            <%= render @posts %>
        </ul>
    </article>
</section>