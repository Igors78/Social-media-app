<% if current_user != user %>
        <% if active_friends?(user) %>
        <%= link_to 'Dismiss Friendsip',
                              { controller: "friendships",
                               action: "destroy_friendship",
                               user_id: current_user.id,
                               friend_id: user.id },
                                class: "badge"%>
        <% else %>
        <%= link_to 'Befriend',
                             { controller: "friendships",
                               action: "create_friendship",
                               user_id: current_user.id,
                               friend_id: user.id },
        class: 'badge badge-secondary' %>
        <% end %>
<% end %>